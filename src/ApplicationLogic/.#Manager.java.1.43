//					 int theChip= position - (1000*currentPlayer.getPlayerColor()+1);
//					 moveChip(diceValue, theChip);
//				}
				
								
			}
			diceRolled = false;
			
			if(checkEndGame(currentPlayer)){
				getOnPodium(currentPlayer);
				if(checkEndGame(null)){
					endGame();
				}
				else			
					nextPlayer();
				pasteInfo(Arrays.toString(podium));
			}
			else			
				nextPlayer();
			
		}
		

	}
	
